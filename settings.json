{
  //panel position left
  "workbench.panel.defaultLocation": "bottom",
  "workbench.colorTheme": "Palenight Theme",
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "'Dank Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.rulers": [80],
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "clojureVSCode.autoStartNRepl": true,
  "[javascript]": {
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",
  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "files.defaultLanguage": "{activeEditorLanguage}",
  "javascript.validate.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    {
      "language": "typescript"
    },
    {
      "language": "javascript"
    },
    {
      "language": "typescriptreact"
    }
  ],
  "eslint.autoFixOnSave": true,
  "workbench.iconTheme": "material-icon-theme",
  "breadcrumbs.enabled": true,
  "grunt.autoDetect": "off",
  "gulp.autoDetect": "off",
  "npm.runSilent": true,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnPaste": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "php.suggest.basic": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[sol]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.colorDecorators": true,
  "editor.codeLens": true,
  "workbench.colorCustomizations": {
    // style the vscode command palette
    "editorGutter.background": "#201d2c",
    "editorGutter.addedBackground": "#87ff54",
    "editorGutter.deletedBackground": "#ff5877",
    "editorGutter.modifiedBackground": "#5ad1fc",
    "editor.background": "#1b1925",
    // "editor.foreground": "#ffffff",
    "editor.selectionBackground": "#000000",
    // "editor.selectionForeground": "#1668ff",
    "editor.lineHighlightBackground": "#201d2c",

    "activityBar.background": "#201d2c",
    "activityBar.foreground": "#f9f9f9",
    "activityBar.border": "#231435",
    "activityBar.activeBorder": "#ff0feb",
    "sideBar.background": "#201d2c",
    "list.hoverBackground": "#12111a",
    "terminal.foreground": "#ffffff",
    "terminal.border": "#6f678a",
    "terminalCursor.foreground": "#ff00ea",
    "terminalCursor.background": "#00eeff",
    "terminal.background": "#130e1a",
    "terminal.ansiBlack": "#1D2021",
    "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#0D6678",
    "terminal.ansiBrightCyan": "#8BA59B",
    "terminal.ansiBrightGreen": "#30de8d",
    "terminal.ansiBrightMagenta": "#8F4673",
    "terminal.ansiBrightRed": "#FB543F",
    "terminal.ansiBrightWhite": "#FDF4C1",
    "terminal.ansiBrightYellow": "#FAC03B",
    "terminal.ansiCyan": "#8BA59B",
    "terminal.ansiGreen": "#2ced83",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#FB543F",
    "terminal.ansiWhite": "#A89984",
    "terminal.ansiYellow": "#FAC03B",
    "terminal.selectionBackground": "#1d1974",
    "tree.indentGuidesStroke": "#1a083f",
    // "editorGroupHeader.tabsBackground": "#201d2c",
    "editorGroup.border": "#353049",
    "editorGroup.dropBackground": "#3307e4",
    "editorGroupHeader.noTabsBackground": "#b31d9f",
    "editorGroupHeader.noTabsBorder": "#353049",
    "editorGroup.emptyBackground": "#201d2c",
    "editorGroup.focusedEmptyBorder": "#26a956",
    "editorGroupHeader.border": "#353049",
    "editorGroupHeader.tabsHoverBackground": "#201d2c",
    "editorGroupHeader.tabsActiveBackground": "#201d2c",
    "editorGroupHeader.tabsActiveForeground": "#ffffff",
    "editorGroupHeader.tabsInactiveForeground": "#ffffff",
    "editorGroupHeader.tabsHoverForeground": "#ffffff",

    // style the vscode tree view
    "list.activeSelectionBackground": "#6a3b9f",
    "list.inactiveSelectionBackground": "#1b132a",
    "list.highlightForeground": "#ee4040",
    "list.focusForeground": "#12c9d6",
    "list.focusBackground": "#6c59b5",
    "list.hoverForeground": "#ffffff",
    "list.dropBackground": "#725dc7",
    "list.focusHighlightForeground": "#e16868",
    "list.invalidItemForeground": "#ee0505",
    "list.errorForeground": "#e4606f",
    "list.warningForeground": "#f68e5d",
    "listFilterWidget.background": "#6d56c9",
    "listFilterWidget.outline": "#aa9de0",
    "listFilterWidget.noMatchesOutline": "#201d2c",
    "list.filterMatchBackground": "#201d2c",
    "list.filterMatchBorder": "#201d2c",

    // style the scrollbar
    "scrollbar.shadow": "#110e21",
    "scrollbarSlider.background": "#292444",
    "scrollbarSlider.hoverBackground": "#4f3da7",

    // style the in editor popups (hover, intellisense, etc)
    "editorHoverWidget.background": "#201d2c",
    "editorHoverWidget.border": "#6f678a",
    "editorHoverWidget.foreground": "#ffffff",
    "editorHoverWidget.statusBarBackground": "#201d2c",
    "editorSuggestWidget.background": "#201d2c",
    "editorSuggestWidget.border": "#6f678a",
    "editorSuggestWidget.foreground": "#ffffff",
    "editorSuggestWidget.highlightForeground": "#ffffff",
    "editorSuggestWidget.selectedBackground": "#201d2c",
    "editorSuggestWidget.selectedForeground": "#ffffff",
    "editorSuggestWidget.focusHighlightForeground": "#ffffff",
    "editorSuggestWidget.statusBarBackground": "#201d2c",
    "editorSuggestWidget.selectedIconForeground": "#ffffff",
    "editorSuggestWidget.errorForeground": "#ffffff",
    "editorSuggestWidget.warningForeground": "#ffffff",
    "editorSuggestWidget.infoForeground": "#ffffff",
    "editorSuggestWidget.loadingMessageForeground": "#ffffff",
    "editorSuggestWidget.noSuggestionsMessageForeground": "#ffffff",

    // style the peek view
    "peekView.border": "#6f678a",
    "peekViewEditor.background": "#201d2c",
    "peekViewEditor.matchHighlightBackground": "#201d2c",
    "peekViewEditorGutter.background": "#201d2c",
    "peekViewResult.background": "#201d2c",
    "peekViewResult.fileForeground": "#ffffff",
    "peekViewResult.lineForeground": "#ffffff",
    "peekViewResult.matchHighlightBackground": "#201d2c",
    "peekViewResult.selectionBackground": "#201d2c",
    "peekViewResult.selectionForeground": "#ffffff",
    "peekViewTitle.background": "#201d2c",
