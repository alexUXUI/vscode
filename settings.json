    "peekViewTitleLabel.foreground": "#ffffff",

    // style the panel
    "panel.background": "#201d2c",
    "panel.border": "#1d0637",
    "panelTitle.activeBorder": "#6f678a",
    "panelTitle.activeForeground": "#ffffff",
    "panelTitle.inactiveForeground": "#ffffff",

    // style the status bar
    "statusBar.background": "#191622",
    "statusBar.border": "#191622",
    "statusBar.debuggingBackground": "#806bd2",
    "statusBar.debuggingForeground": "#ff0404",
    "statusBar.foreground": "#726392",
    "statusBar.noFolderBackground": "#796ea9",
    "statusBar.noFolderForeground": "#ffffff",
    "statusBarItem.activeBackground": "#c6c2d2",
    "statusBarItem.hoverBackground": "#070709",
    "statusBarItem.prominentBackground": "#8e85b0",
    "statusBarItem.prominentHoverBackground": "#7db325",

    // style the activity bar
    "activityBar.dropBackground": "#201d2c",
    "activityBar.inactiveForeground": "#4c446b",
    "activityBarBadge.background": "#d905e9",
    "activityBarBadge.foreground": "#ffffff",

    // style the comments
    "editorGutter.commentRangeForeground": "#ffffff",

    // style the file tabs
    "editorGroupHeader.tabsBackground": "#191622",
    "editorGroupHeader.tabsBorder": "#191622",
    "tab.activeBackground": "#1b1925",
    "tab.activeForeground": "#a6a1b6",
    "tab.border": "#1b1925",
    "tab.inactiveBackground": "#191622",
    "tab.inactiveForeground": "#ffffff",
    "tab.unfocusedActiveBackground": "#2d283e",
    "tab.unfocusedActiveForeground": "#ffffff",
    "tab.unfocusedInactiveBackground": "#2d283e",
    "tab.unfocusedInactiveForeground": "#ffffff",
    "tab.hoverBackground": "#1b1925",
    "tab.hoverForeground": "#ffffff",
    "tab.unfocusedHoverBackground": "#6f55d6",
    "tab.unfocusedHoverForeground": "#ffffff",
    "tab.activeModifiedBorder": "#6f55d6",
    "tab.inactiveModifiedBorder": "#6f55d6",
    "tab.unfocusedActiveModifiedBorder": "#6f55d6",
    "tab.unfocusedInactiveModifiedBorder": "#6f55d6"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.settings.editor": "json",
  "editor.inlineSuggest.enabled": true,
  "debug.javascript.autoAttachFilter": "disabled",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true
  },
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.zoomLevel": 1,
  "editor.largeFileOptimizations": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "git.confirmSync": false,
  "explorer.confirmDelete": false
}
